<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/share_external"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:gravity="center|center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@color/primaryText"
            android:src="@drawable/ic_share"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_message"
            android:textSize="16sp"
            android:textColor="@color/primaryText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/forward_to_contact"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:gravity="center|center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:tint="@color/primaryText"
            android:src="@drawable/ic_message_forward"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forward_message"
            android:textSize="16sp"
            android:textColor="@color/primaryText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/copy_text"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:gravity="center|center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="3dp"
            android:tint="@color/primaryText"
            android:src="@drawable/ic_copy"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copy_message_text"
            android:textSize="16sp"
            android:textColor="@color/primaryText" />

    </LinearLayout>

</LinearLayout>