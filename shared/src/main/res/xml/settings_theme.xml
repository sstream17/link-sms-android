<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <xyz.stream.messenger.shared.view.MaterialPreferenceCategory
        android:key="@string/pref_general_category"
        android:title="@string/general_category">

        <xyz.stream.messenger.view.AutoSummaryListPreference
            android:key="@string/pref_base_theme"
            android:title="@string/base_theme"
            android:entries="@array/base_theme"
            android:entryValues="@array/base_theme_values"
            android:defaultValue="day_night" />

        <xyz.stream.messenger.view.AutoSummaryListPreference
            android:key="@string/pref_font_size"
            android:title="@string/font_size"
            android:entries="@array/font_size"
            android:entryValues="@array/font_size_values"
            android:defaultValue="normal" />

        <SwitchPreference
            android:key="@string/pref_apply_primary_color_toolbar"
            android:title="@string/apply_primary_theme_toolbar"
            android:summary="@string/apply_primary_theme_toolbar_summary"
            android:defaultValue="true" />

    </xyz.stream.messenger.shared.view.MaterialPreferenceCategory>

    <xyz.stream.messenger.shared.view.MaterialPreferenceCategory
        android:key="@string/pref_conversation_list"
        android:title="@string/conversation_list_category">

        <xyz.stream.messenger.view.ColorPreference
            android:key="@string/pref_global_primary_color"
            android:title="@string/primary_color"
            app:display_normalize="true"/>

        <xyz.stream.messenger.view.ColorPreference
            android:key="@string/pref_global_primary_dark_color"
            android:title="@string/primary_dark_color"
            app:display_normalize="false" />

        <xyz.stream.messenger.view.ColorPreference
            android:key="@string/pref_global_accent_color"
            android:title="@string/accent_color"
            app:display_normalize="false" />

        <SwitchPreference
            android:key="@string/pref_apply_theme_globally"
            android:title="@string/apply_theme_globally"
            android:summary="@string/apply_theme_globally_summary"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="@string/pref_conversation_categories"
            android:title="@string/conversation_categories"
            android:summary="@string/conversation_categories_summary"
            android:defaultValue="true" />

    </xyz.stream.messenger.shared.view.MaterialPreferenceCategory>

    <xyz.stream.messenger.shared.view.MaterialPreferenceCategory
        android:key="@string/pref_message_list"
        android:title="@string/message_list_category">

        <xyz.stream.messenger.view.AutoSummaryListPreference
            android:key="@string/pref_bubble_style"
            android:title="@string/bubble_style"
            android:entries="@array/bubble_style"
            android:entryValues="@array/bubble_style_values"
            android:defaultValue="round" />

        <SwitchPreference
            android:key="@string/pref_message_timestamp"
            android:title="@string/message_timestamp"
            android:summary="@string/message_timestamp_summary"
            android:defaultValue="false" />

    </xyz.stream.messenger.shared.view.MaterialPreferenceCategory>

</PreferenceScreen>