    <xyz.klinker.messenger.shared.view.MaterialPreferenceCategoryCompat android:title="@string/platform_info">

        <Preference
            android:key="@string/pref_about_copyright"
            android:summary="@string/copyright_summary"
            android:title="@string/copyright"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/pref_website"
            android:summary="@string/access_messages_from_any_device"
            android:title="@string/website"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/pref_supported_platforms"
            android:summary="@string/supported_platforms_summary"
            android:title="@string/supported_platforms"
