<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <xyz.klinker.messenger.shared.view.MaterialPreferenceCategoryCompat android:title="@string/app_info">

        <Preference
            android:key="@string/pref_about_open_source"
            android:title="@string/open_source_title"
            android:summary="@string/open_source_summary"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/pref_about_changelog"
            android:title="@string/changelog"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/pref_about_app_version"
            android:title="@string/app_version"
            app:iconSpaceReserved="false" />

        <Preference
