<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <xyz.klinker.messenger.shared.view.MaterialPreferenceCategoryCompat
        android:key="@string/pref_help_troubleshooting_category"
        android:title="@string/troubleshooting">

        <Preference
            android:key="@string/pref_help_faqs"
            android:title="@string/get_help"
            android:summary="@string/get_help_summary"
            app:iconSpaceReserved="false"/>

        <Preference
            android:summary="@string/get_help_summary_2"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/pref_help_battery_optimization"
            android:title="@string/disable_battery_optimization"
            android:summary="@string/disable_battery_optimization_summary"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/pref_help_features"
            android:title="@string/features"
            app:iconSpaceReserved="false"/>

    </xyz.klinker.messenger.shared.view.MaterialPreferenceCategoryCompat>

    <xyz.klinker.messenger.shared.view.MaterialPreferenceCategoryCompat
        android:title="@string/get_in_touch" >

        <Preference
            android:key="@string/pref_help_email"
            android:title="@string/email"
            android:summary="@string/email_summary"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/pref_help_twitter"
            android:title="@string/twitter"
            android:summary="@string/twitter_summary"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/pref_help_issues"
            android:title="@string/issues"
            android:summary="@string/issues_summary"
            app:iconSpaceReserved="false" />

    </xyz.klinker.messenger.shared.view.MaterialPreferenceCategoryCompat>

</PreferenceScreen>