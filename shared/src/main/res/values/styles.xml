<resources>

    <style name="LinkTheme.NoActionBar" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/linkColorPrimary</item>
        <item name="colorPrimaryDark">@color/linkColorPrimaryDark</item>
        <item name="colorAccent">@color/linkColorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:actionOverflowButtonStyle">@style/Overflow</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/actionModeBackground</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
    </style>

    <style name="LinkTheme.MessengerActivity" parent="@style/LinkTheme.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:actionOverflowButtonStyle">@style/Overflow</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementExitTransition">@transition/transition_change_image</item>
    </style>

    <style name="LinkTheme" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/linkColorPrimary</item>
        <item name="colorPrimaryDark">@color/linkColorPrimaryDark</item>
        <item name="colorAccent">@color/linkColorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:actionOverflowButtonStyle">@style/Overflow</item>
    </style>

    <style name="LinkThemeWearable" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/linkColorPrimary</item>
        <item name="colorPrimaryDark">@color/linkColorPrimaryDark</item>
        <item name="colorAccent">@color/linkColorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:actionOverflowButtonStyle">@style/Overflow</item>
    </style>

    <style name="LinkPasscode" parent="@style/tutorial_FloatingTutorialTheme">
        <item name="colorPrimary">@color/linkColorPrimary</item>
        <item name="colorPrimaryDark">@color/linkColorPrimaryDark</item>
        <item name="colorAccent">@color/linkColorAccent</item>
    </style>

    <style name="LinkTheme.NoColors" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/materialGrey</item>
        <item name="colorPrimaryDark">@color/materialGreyDark</item>
        <item name="colorAccent">@color/primaryText</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:actionOverflowButtonStyle">@style/Overflow</item>
    </style>

    <style name="LinkTheme.NoColors.Media" parent="@style/LinkTheme.NoColors">
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="LinkTheme.NoActionBar.Translucent" parent="@style/LinkTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/Overflow</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/transition_change_image</item>
    </style>

    <style name="AppIntro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SubscriptionPicker" parent="Theme.MaterialComponents.Light.Dialog.Alert" />

    <style name="Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="EllipsizeText">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StyledFastScrollerTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
