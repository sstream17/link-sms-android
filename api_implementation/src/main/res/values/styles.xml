<resources>

    <style name="api_Theme.MaterialComponents.Translucent" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="api_Theme.MaterialComponents.Activate" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/api_login_background</item>
        <item name="colorPrimaryDark">@color/api_login_background_dark</item>
        <item name="colorAccent">@color/api_fab_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/api_login_background</item>
        <item name="android:windowBackground">@color/api_login_background</item>
    </style>

</resources>